swiper {
  width: 100%;
  height: 600rpx;
}

swiper image {
  width: 100%;
  height: 100%;
}

.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  padding-bottom: 5px;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
}

.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author {
  vertical-align: middle;
  width: 60rpx;
  height: 60rpx;
   border-radius: 50%;
}

.post-date {
  vertical-align: middle;
  margin-left: 20rpx;
  margin-bottom: 5px;
  font-size: 26rpx;
}

.post-title {
  margin: 0 0 10px 10px;
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.post-image {
  /* margin-left: 16px; */
  margin-bottom: 15px;
  width: 100%;
  height: 340rpx;
}

.post-content {
  margin: 20rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
}

.post-like {
  flex-direction: row;
  margin-left: 10px;
  line-height: 16px;
  font-size: 12px;
}

.post-like-image {
  vertical-align: middle;
  margin-right: 8px;
  width: 16px;
  height: 16px;
}
.post-like-font {
  vertical-align: middle;
  margin-right: 20px;
}
