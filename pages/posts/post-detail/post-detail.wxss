.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 800rpx;
}

.audio {
  position: absolute;
  left: 50%;
  margin-left: -64rpx;
  top: 400rpx;
  margin-top: -64rpx;
  opacity: 0.6;
  width: 128rpx;
  height: 128rpx;
}

.author-date {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatar {
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
}

.author {
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #666;
  vertical-align: middle;
}

.const-text {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #999;
  vertical-align: middle;
}

.date {
  margin-left: 30rpx;
  font-size: 24rpx;
  color: #999;
  vertical-align: middle;
}

.title {
  margin-left: 40rpx;
  margin-top: 30rpx;
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool {
  margin-top: 20rpx;
}

.icon-img {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.icon-img .image {
  width: 32rpx;
  height: 32rpx;
}

.collection-img {
  margin-left: 30rpx;
}

.line {
  position: relative;
  top: 18rpx;
  margin: 0 auto;
  width: 660rpx;
  height: 2rpx;
  vertical-align: middle;
  background-color: #e5e5e5;
  z-index: -99;
}

.detail {
  margin: 20rpx 30rpx 0 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  color: #666;
}
